<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amerie.pizzabounce" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/pepperoni"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BounceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HelpActivity"
            android:theme="@android:style/Theme.Dialog"
            android:parentActivityName="com.example.amerie.pizzabounce.BounceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amerie.pizzabounce.BounceActivity" />
        </activity>
    </application>

</manifest>
